# This file is managed by Puppet (simp-nfs module). Changes will be overwritten
# at the next Puppet run.
<% if @content -%>
<%= @content -%>
<% else -%>
[General]

<%  unless @verbosity.nil? -%>
Verbosity = <%= @verbosity %>
<%  end -%>
<%  unless @domain.nil? -%>
Domain = <%= @domain %>
<%  end -%>
<%  unless @no_strip.nil? -%>
No-Strip = <%= @no_strip %>
<%  end -%>
<%  unless @reformat_group.nil? -%>
Reformat-Group = <%= @reformat_group %>
<%  end -%>
<%  unless @local_realms.nil? -%>
Local-Realms = <%= @local_realms.join(',') %>
<%  end -%>

[Mapping]

Nobody-User = <%= @nobody_user %>
Nobody-Group = <%= @nobody_group %>

[Translation]

Method = <%= @trans_method.join(',') %>
<%  unless @gss_methods.nil? -%>
GSS-Methods = <%= @gss_methods.join(',') %>
<%  end -%>

[Static]
<%
  unless @static_translation.nil?
    @static_translation.each_pair do |k,v|
-%>
<%= k %> = <%= v %>
<%
    end
  end
-%>

[UMICH_SCHEMA]

# This is not yet supported by the SIMP configuration.
<% end -%>
